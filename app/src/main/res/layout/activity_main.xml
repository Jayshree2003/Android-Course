<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".dessertLifeCycle.ModuleLifeCycleActivity">

        <Button
            android:id="@+id/btn_clrMyViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color My Views"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_dice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DiceRoller"
            app:layout_constraintTop_toBottomOf="@+id/btn_clrMyViews" />

        <Button
            android:id="@+id/btn_lifecycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LifeCycles"
            app:layout_constraintTop_toBottomOf="@+id/btn_dice" />

        <Button
            android:id="@+id/btn_modulelifecycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dessert LifeCycle"
            app:layout_constraintTop_toBottomOf="@+id/btn_lifecycle" />

        <Button
            android:id="@+id/btn_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleep Tracker"
            app:layout_constraintTop_toBottomOf="@+id/btn_architecture" />

        <Button
            android:id="@+id/btn_architecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Architecture"
            app:layout_constraintTop_toBottomOf="@+id/btn_modulelifecycle" />

        <Button
            android:id="@+id/btn_recyclertask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recycler"
            app:layout_constraintTop_toBottomOf="@+id/btn_sleep" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>